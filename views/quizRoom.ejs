<!doctype html>
<html lang="en">

<head>
    <%- include('partials/head') -%>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>

    <body>
        <%- include('partials/header') -%>

        <main role="main">

            <section class="topics py-5 bg-light">
                <div class="container">
                    <div class="">
                        <h2> <span id="examName"></span> Exam Room</h2>
                    </div>
                    <div class="">
                        <h4>Question <span id="currentExamQuestion"></span> of <span id="totalExamQuestions"></span>:
                        </h4>
                    </div>
                    <div class="container">
                        <div id="game" class="justify-center flex-column">
                            <h2 id="question">What is the answer to this questions?</h2>
                            <div class="choice-container">
                                <p class="choice-prefix">A</p>
                                <p class="choice-text" data-number="1">Choice 1</p>
                            </div>
                            <div class="choice-container">
                                <p class="choice-prefix">B</p>
                                <p class="choice-text" data-number="2">Choice 2</p>
                            </div>
                            <div class="choice-container">
                                <p class="choice-prefix">C</p>
                                <p class="choice-text" data-number="3">Choice 3</p>
                            </div>
                            <div class="choice-container">
                                <p class="choice-prefix">D</p>
                                <p class="choice-text" data-number="4">Choice 4</p>
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <button id="studentAction" class="nextQuestion btn btn-lg btn-success float-right">Next Question</button>
                    </div>
                </div>
            </section>

        </main>

        <%- include('partials/footer') -%>
        <script src="/js/quiz.js"></script>
    </body>

</html>