<!doctype html>
<html lang="en">

<head>
    <%- include('partials/head') -%>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<html>

<body>
    <%- include('partials/header') -%>
    <main role="main">

        <section class="topics py-5 bg-light">
            <div class="container">
                <h2>Create Quiz</h2>
                <form action="/create-quiz" method="POST">
                    <div class="form-group">
                        <!-- Make this dynamic -->
                        <label for="topic">Topic</label>
                        <select class="form-control" name="topic" id="topic">

                            <% topics.forEach(function(topic, index){ %>
                            <option value="<%= topic._id %>"><%= topic.name %></option>
                            <% }); %>

                        </select>
                    </div>

                    <div class="form-group">
                        <label for="topic">Question</label>
                        <input class="form-control" type="text" name="question" id="question">
                    </div>

                    <div class="form-group">
                        <label for="topic">Choice 1</label>
                        <input class="form-control" type="text" name="choice1" id="choice1">
                    </div>

                    <div class="form-group">
                        <label for="topic">Choice 2</label>
                        <input class="form-control" type="text" name="choice2" id="choice2">
                    </div>

                    <div class="form-group">
                        <label for="topic">Choice 3</label>
                        <input class="form-control" type="text" name="choice3" id="choice3">
                    </div>

                    <div class="form-group">
                        <label for="topic">Choice 4</label>
                        <input class="form-control" type="text" name="choice4" id="choice4">
                    </div>

                    <div class="form-group">
                        <label for="topic">Answer</label>
                        <select class="form-control" name="answer" id="answer">
                            <option value="1">Choice 1</option>
                            <option value="2">Choice 2</option>
                            <option value="3">Choice 3</option>
                            <option value="4">Choice 4</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button class="form-control btn btn-success" type="submit">Save</button>
                    </div>

                </form>
            </div>
        </section>

    </main>
    <%- include('partials/footer') -%>
    <script src="/js/results.js"></script>
</body>

</html>